{
    "manifest_version": 1,
    "name": "Gptify",
    "version": "1.1.0",
    "description": "Extension for quick AI searches",
    "content_scripts": [{
        "css": [
            "src/styles.css"
        ],
        "js": [
            "src/main.js"
        ],
        "matches": [
            "http://*/*",
            "https://*/*"
        ]
    }],
    "web_accessible_resources": [{
        "resources": ["src/main.html"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "action": {
        "default_popup": "src/main.html",
        "default_title": "Gptify"
    }
}
